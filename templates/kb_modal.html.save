{% block body %}

<!-- Modal for Showing No Blocks Error
     This Modal for showing the erro when there are no blocks available in the modal.
     The id of the modal is no_blocks-->

 <div class="modal fade" id="noblocksModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header btn-danger">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Warning-No Blocks</h4>
        </div>
        <div class="modal-body">
          <p>Hey! Drag Some Blocks to Program Kodiebot!!</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>
<!-- End of No Blocks Modal -->


<!--            ################# Load the Program Modal #####################
     Modal for the Load Menu in the File link. This modal loads the available programs
     in the program directory of the kodiebot.
-->
     <div class="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" id="loadModal"> 
    <div class="modal-dialog">
    
      <div class="modal-content">
        <div class="modal-header btn-success">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Select Program To Load</h4>
        </div>
        <div id ='myList' class="modal-body list-group" style="max-height: 50vh; overflow-y: auto">
          
             </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" id="delete_file" style="float: left;">Delete</button>
          <button type="button" class="btn btn-success" id="open_file">Open</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div> 
<!-- End of Load Modal -->



<!--                        ############  Save the Program Modal ########
     Modal for the Save Menu in the File Link. This modal saves the current blocks available in the workspace
     to the program directory of the Kodiebot.
-->
<div class="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" id="saveModal"> 
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header btn-success">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Save the Program to File</h4>
        </div>
        <div class="modal-body">
          
         <p>Save the Program to the kodiebot inbuilt memory</p>
         <p>Name of the Program:<input type="text" id="program_name"></input></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-success" id="save_file_btn">Save</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>

  <!-- End of Save Modal -- >




<!--                         ######## Download to PC Modal ##################
     Modal for the Download to PC Menu in the File link. This modal downloads the content of the workspace as xml
     to the pc workin on. The file shall be named as per the user wish. -->    

<div class="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" id="downloadModal"> 
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header btn-success">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Download the Program to PC</h4>
        </div>
        <div class="modal-body">
          
         <p>Enter the Name of the File to be Saved and Downloaded to PC</p>
         <p>FileName:<input type="text" id="get_file_name"></input></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-success" id="download_file_btn">Download</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>


<!-- End of Download to PC Modal -->


<!--                      ########## Upload to PC Modal ####################
     Modal for uploading the kodieblox program from the local pc to the current workspace. The current workspace 
     program shall be saved to the user's kodiebot by giving the name.-->

<div class="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" id="uploadModal"> 
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header btn-success">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Upload the Program to Workspace</h4>
        </div>
        <div class="modal-body">
          
         <p>Select the file from the computer to upload to the workspace</p>
         <p>Select the file to load:<input type="file" id="upld_file"></input></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-success" id="upload_file_btn" onclick="loadFileAsText()">Upload</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>

<!-- End of Upload to PC Modal -->


<!-- PowerOff Modal to shutdown the Kodbiebot -->
<div class="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" id="poweroffModal">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header btn-danger">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">PowerOff the KodieBot</h4>
        </div>
        <div class="modal-body" style="margin: auto; padding-left:200px">
	<a style=""poweroffbtn" class="btn btn-lg btn-danger">Power Off</a>
	
        </div>
        <div class="modal-footer">
<!--          <button type="button" class="btn btn-success" id="upload_file_btn" onclick="loadFileAsText()">Upload</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button> -->
        </div>
      </div>

    </div>
  </div>



<!-- End of PowerOff modal -->







{% endblock%}
